<apex:page standardController="Campaign" extensions="Typeform_pushpull" title="EMAIL BLASTS" id="mypage" standardStylesheets="false" docType="html-5.0">
<link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" />
<style >

    
    .header{
        padding-top:10px;
        font-size:16px !important;
        font-weight:bold;
        font-family: 'Lato', sans-serif !important;
    }
    
.styled-Button {
   height: 29px;
   overflow: hidden;
   width: 180px;
   font-family: 'Lato', sans-serif !important;
   font-size:13px !important;
   font-weight:bold !important;
   padding-left: 10px !important;
   padding-right: 10px !important;
}


.styled-select {
   background: url(http://i62.tinypic.com/15xvbd5.png) no-repeat 96% 0;
   height: 29px;
   overflow: hidden;
   width: 350px;
   font-family: 'Lato', sans-serif !important;
}

.styled-select select {
   background: transparent;
   border: none;
   height: 29px;
   padding: 5px; /* If you add too much padding here, the options won't show in IE */
   width: 378px;
   font-family: 'Lato', sans-serif !important;
}

.semi-square {
   -webkit-border-radius: 5px;
   -moz-border-radius: 5px;
   border-radius: 5px;
}
.generalfont {
    font-family: 'Lato', sans-serif !important;
    font-size:13px !important;
}

/* -------------------- Colors: Background */
.bluebutton    { 
    background : none !important; 
    background-color: RGB(52,152,219) !important ;
    color:#fff !important;
    font-family: 'Lato', sans-serif !important;
    font-size:13px;
}



/* -------------------- Colors: Background */
.blue    { 
    background-color: RGB(26,188,156);
    font-family: 'Lato', sans-serif !important;
}

/* -------------------- Colors: Text */
.blue select    { background:transparent; color: #000; }

input[type=text]:focus {
    box-shadow: 0 0 5px rgba(26, 188, 156, 1);
    border: 1px solid rgba(26, 188, 156, 1);
}

