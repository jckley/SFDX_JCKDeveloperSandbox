    <aura:attribute name="totallinkedin" 	type="String" />
    <aura:attribute name="terrw" type="TerritoryWrapper2" />
    
    <div class="card slds-size_1-of-1 slds-grid slds-wrap">
        
        <div class="slds-grid slds-wrap slds-size_1-of-1 slds-large-size_1-of-5 social-container">
